{
  "schemaVersion": 1,
  "id": "minecraft-command-permissions",
  "version": "${version}",

  "name": "Minecraft Command Permissions",
  "description": "Registers vanilla Minecraft commands in Fabric Permission API with structure \"minecraft.command.<command>\"",
  "authors": [
    "TjeuKayim"
  ],
  "contact": {
    "sources": "https://github.com/TjeuKayim/minecraft-command-permissions-fabric"
  },

  "license": "MIT",
  "icon": "assets/minecraft-command-permissions/icon.png",

  "environment": "*",
  "entrypoints": {
    "server": [
      "com.github.tjeukayim.commandpermissionsfabric.PermissionsMod"
    ]
  },
  "mixins": [
    "mcpf.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.8",
    "fabric-command-api-v2": "*",
    "minecraft": "1.19.x",
    "fabric-permissions-api-v0": "*",
    "java": ">=17"
  },
  "suggests": {
    "luckperms": "*"
  }
}
